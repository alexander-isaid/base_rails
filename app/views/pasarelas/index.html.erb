<p id="notice"><%= notice %></p>

<h1>Pasarelas</h1>

<%= form_for "", url: pasarelas_path, role: "search" , method: :get do  %>
  <%= text_field_tag :search, @search, placeholder: "Buscar ..." %>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pasarelas.each do |pasarela| %>
      <tr>
        <td><%= pasarela.nombre %></td>
        <td><%= estado_html(pasarela.estado) %></td>
        <td><%= link_to 'Mostar', pasarela, class:"btn btn-info"%></td>
        <td><%= link_to 'Editar', edit_pasarela_path(pasarela), class:"btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', pasarela, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<br>

<%= link_to 'Nueva Pasarela', new_pasarela_path, class:"btn btn-lg btn-success" %>
